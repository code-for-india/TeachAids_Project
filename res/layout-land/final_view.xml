<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="horizontal"
   android:layout_height="fill_parent"
   android:layout_width="fill_parent"
   android:background="#ffffff"
   >

	<TextView
        android:id="@+id/finalCongrats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "10dp"
        android:layout_marginBottom = "10dip"
        android:gravity="center"
        android:text="Congrats, you finished!"
        android:textColor="#000000"
        android:textSize="28sp" />

      <TextView
        android:id="@+id/finalAidsPrevention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "6dip"
        android:layout_marginBottom = "10dip"
        android:layout_below="@id/finalCongrats"
        android:gravity="center"
        android:text="Aids Prevention Begins With Us"
        android:textColor="#2b2e2e"
        android:textSize="50sp" />
          
      <ImageView
            android:id="@+id/startTeachAids"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="150dp"
			android:layout_marginLeft="90dp"
        	android:layout_marginRight="0dp"            
    		android:layout_width="match_parent"
    		android:layout_height="500dp"
    		android:src="@drawable/peopleoncircle" />

       <TextView
        android:id="@+id/finalLearnMoreTeachAids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:text="www.teachaids.org"
        android:textColor="#000000"
        android:textSize="12sp" />
            
      <ImageView
            android:layout_above="@+id/finalLearnMoreTeachAids"
            android:layout_marginTop="50dp"
			android:layout_marginLeft="10dp"
        	android:layout_marginRight="40dp"            
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/teachaidslogo" />
      
</RelativeLayout>

